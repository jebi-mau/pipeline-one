# SVO2-SAM3 Analyzer Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=SVO2-SAM3 Analyzer
APP_ENV=development
DEBUG=true

# Database (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=svo2_analyzer
POSTGRES_PASSWORD=svo2_analyzer_dev
POSTGRES_DB=svo2_analyzer
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Celery
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/1

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# Frontend
FRONTEND_URL=http://localhost:3000

# Data Paths
DATA_ROOT=/home/atlas/dev/pipe1/data
SVO2_DIRECTORY=${DATA_ROOT}/svo2
OUTPUT_DIRECTORY=${DATA_ROOT}/output
MODELS_DIRECTORY=${DATA_ROOT}/models
CACHE_DIRECTORY=${DATA_ROOT}/cache

# SAM 3 Configuration
SAM3_MODEL_VARIANT=sam3_hiera_large
SAM3_MODEL_PATH=${MODELS_DIRECTORY}/sam3
SAM3_DEFAULT_CONFIDENCE=0.5
SAM3_DEFAULT_IOU=0.7
SAM3_DEFAULT_BATCH_SIZE=8

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
TORCH_COMPILE_ENABLED=true

# ZED SDK
ZED_SDK_PATH=/usr/local/zed

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/svo2_analyzer.log

# Debug Tools (optional)
REDIS_COMMANDER_PORT=8081
PGADMIN_PORT=8082
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=admin
